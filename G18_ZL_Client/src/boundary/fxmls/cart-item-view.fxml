<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="176.0" prefWidth="297.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boundary.fxmlControllers.CartItemControl">
   <children>
      <VBox prefHeight="196.0" prefWidth="294.0">
         <children>
            <HBox prefHeight="196.0" prefWidth="291.0">
               <children>
                  <VBox prefHeight="174.0" prefWidth="134.0">
                     <children>
                        <ImageView fitHeight="196.0" fitWidth="134.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" prefHeight="196.0" prefWidth="162.0">
                     <children>
                        <Label fx:id="nameItemLabel" prefHeight="20.0" prefWidth="66.0" text="name">
                           <VBox.margin>
                              <Insets top="6.0" />
                           </VBox.margin>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="165.0" prefWidth="162.0" spacing="10.0">
                           <children>
                              <Label fx:id="priceLabel" text="25" />
                              <Button fx:id="addBtn" mnemonicParsing="false" text="+" onMousePressed="#onAdditemPressed" />
                              <Label fx:id="amountLabel" text="1" />
                              <Button fx:id="deleteBtn" mnemonicParsing="false" text="-"  onMousePressed="#onAddDeletePressed"/>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
