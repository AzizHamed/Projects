<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefWidth="200.0" style="-fx-background-color: white; -fx-background-radius: 15;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boundary.fxmlControllers.CatalogItemController">
   <children>
      <VBox alignment="CENTER" spacing="5.0">
         <children>
            <VBox fx:id="catalogItemVbox" alignment="CENTER" onMousePressed="#onItemPressed" spacing="5.0">
               <children>
                  <Label fx:id="namelabel" text="Name" textFill="#0c0e96">
                     <font>
                        <Font name="System Bold Italic" size="15.0" />
                     </font>
                  </Label>
                  <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </ImageView>
                  <Label fx:id="pricelabel" alignment="CENTER" text="\$$$" textFill="#0c0e96">
                     <font>
                        <Font name="System Bold Italic" size="15.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
            </VBox>
            <Button fx:id="AddToCartButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMousePressed="#onPressedAddItem" style="-fx-background-color: #1de9b6;" text="Add To Cart" textFill="#0c0e96">
               <font>
                  <Font name="System Bold Italic" size="15.0" />
               </font>
            </Button>
         </children>
         <StackPane.margin>
            <Insets />
         </StackPane.margin>
         <padding>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </padding>
      </VBox>
   </children>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
   <effect>
      <DropShadow />
   </effect>
   <padding>
      <Insets bottom="10.0" top="10.0" />
   </padding>
</StackPane>
