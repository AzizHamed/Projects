<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boundary.fxmlControllers.LogInController">
   <children>
      <ImageView fx:id="logInBackgroundIV" fitHeight="600.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true" />
      <HBox alignment="CENTER_RIGHT" style="-fx-background-color: cyan;">
         <children>
            <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white;">
               <children>
                  <ImageView fx:id="welcomeIV" fitHeight="125.0" fitWidth="215.0" preserveRatio="true">
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </VBox.margin></ImageView>
                  <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Log In" />
                        <HBox alignment="CENTER">
                           <children>
                              <ImageView fx:id="userIconIv" fitHeight="19.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
                                 <HBox.margin>
                                    <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                                 </HBox.margin>
                              </ImageView>
                              <TextField fx:id="usernameTF" promptText="Username" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER">
                           <children>
                              <ImageView fx:id="passIconIV" fitHeight="19.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
                                 <HBox.margin>
                                    <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                                 </HBox.margin>
                              </ImageView>
                              <PasswordField fx:id="passwordPF" promptText="Password" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMousePressed="#onLogInPressed" style="-fx-background-color: #1de9b6;" text="Log in" />
                     </children>
                  </VBox>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </padding>
            </VBox>
         </children>
         <StackPane.margin>
            <Insets />
         </StackPane.margin>
      </HBox>
   </children>
</StackPane>
