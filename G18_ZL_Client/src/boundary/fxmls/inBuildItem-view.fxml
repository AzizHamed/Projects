<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane prefHeight="90.0" prefWidth="450.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boundary.fxmlControllers.InBuildItemController">
   <children>
      <HBox alignment="CENTER" prefHeight="90.0" prefWidth="450.0" spacing="10.0" StackPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="71.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS" />
            <Label fx:id="nameLabel" prefHeight="23.0" prefWidth="59.0" text="name" HBox.hgrow="ALWAYS" />
            <Label fx:id="priceLabel" prefHeight="23.0" prefWidth="59.0" text="price" HBox.hgrow="ALWAYS" />
            <Button fx:id="addBtn" mnemonicParsing="false" text="+" HBox.hgrow="ALWAYS" onMousePressed="#onPressedAddItem" />
            <Label fx:id="amountLabel" prefHeight="21.0" prefWidth="23.0" text="0" HBox.hgrow="ALWAYS" />
            <Button fx:id="deleteBtn" mnemonicParsing="false" text="-" HBox.hgrow="ALWAYS" onMousePressed="#onPressedDelete"/>
         </children>
      </HBox>
   </children>
</StackPane>
